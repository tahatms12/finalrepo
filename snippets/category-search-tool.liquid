<div class="bg-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold text-gray-900">FIND YOUR PARTS</h2>
      <p class="text-gray-600 mt-2">Search by category and vehicle specifications</p>
    </div>
    
    <div class="bg-gray-50 p-6 rounded-lg">
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <select class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
          <option value="">Year</option>
          {% for i in (0..29) %}
            {% assign year = 2025 | minus: i %}
            <option value="{{ year }}">{{ year }}</option>
          {% endfor %}
        </select>
        
        <select class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
          <option value="">Make</option>
          <option value="toyota">Toyota</option>
          <option value="honda">Honda</option>
          <option value="ford">Ford</option>
          <option value="chevrolet">Chevrolet</option>
          <option value="nissan">Nissan</option>
          <option value="bmw">BMW</option>
          <option value="mercedes">Mercedes</option>
          <option value="audi">Audi</option>
        </select>
        
        <select class="w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
          <option value="">Model</option>
          {# Models would typically be dynamically loaded based on Make selection via JavaScript #}
        </select>
      </div>
      
      {# Category Selection Row - These buttons will be static without dynamic selection #}
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-3 mb-6">
        {# Example static categories. Dynamic loading would require JavaScript. #}
        <button class="p-3 text-sm font-medium rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
          Drivetrain
        </button>
        <button class="p-3 text-sm font-medium rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
          Electrical
        </button>
        <button class="p-3 text-sm font-medium rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
          Exterior
        </button>
        <button class="p-3 text-sm font-medium rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
          Heating/Cooling
        </button>
        <button class="p-3 text-sm font-medium rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
          Interior
        </button>
        <button class="p-3 text-sm font-medium rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
          Wheels/Tires
        </button>
        <button class="p-3 text-sm font-medium rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
          Wire Harness
        </button>
      </div>
      
      {# Subcategory Selection - This section will be static without dynamic display #}
      <div class="mb-6">
        <h3 class="text-lg font-medium text-gray-900 mb-3">
          Subcategories (Static Placeholder)
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2">
          {# Example static subcategories #}
          <button class="p-2 text-sm rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
            Subcategory 1
          </button>
          <button class="p-2 text-sm rounded-md transition-colors bg-white border border-gray-300 text-gray-700 hover:bg-gray-50">
            Subcategory 2
          </button>
        </div>
      </div>
      
      {# Search Button - This button will not trigger dynamic search without JavaScript #}
      <div class="text-center">
        <button
          class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-8 rounded-md transition-colors"
        >
          SEARCH PARTS
        </button>
      </div>
    </div>
  </div>
</div>
