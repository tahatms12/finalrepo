<div class="container mx-auto p-10">
  <h1 class="text-3xl font-bold mb-8">{{ section.settings.title }}</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for block in section.blocks %}
      <div class="border p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-2">{{ block.settings.name }}</h2>
        <p class="mb-4">{{ block.settings.address }}</p>
        <p class="font-semibold mb-4">Hours: {{ block.settings.hours }}</p>
        
        <div class="flex justify-between">
          <a href="{{ block.settings.directions_link }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Directions</a>
          <a href="{{ block.settings.inventory_link }}" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Local Inventory</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Locations",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Locations"
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Location",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Location Name"
        },
        {
          "type": "text",
          "id": "address",
          "label": "Address",
          "default": "123 Main St, Anytown, USA"
        },
        {
          "type": "text",
          "id": "hours",
          "label": "Hours",
          "default": "Mon-Fri: 9am-5pm"
        },
        {
          "type": "url",
          "id": "directions_link",
          "label": "Directions Link"
        },
        {
          "type": "url",
          "id": "inventory_link",
          "label": "Inventory Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Locations",
      "category": "Store Info",
      "blocks": [
        { "type": "location" },
        { "type": "location" },
        { "type": "location" }
      ]
    }
  ]
}
{% endschema %}
