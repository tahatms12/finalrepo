{% comment %} AEH draggable hero section {% endcomment %}
<section class="hero-aeh" style="background-image:url({{ section.settings.image | img_url: '2000x' }});">
  <span class="hero-aeh__overlay"></span>
  <div class="hero-aeh__content">
    {% if section.settings.heading != blank %}
      <h1 class="hero-aeh__title">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="hero-aeh__subtitle">{{ section.settings.subheading }}</p>
    {% endif %}
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-aeh__btn">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name":"AEH Hero",
  "settings":[
    {
      "type":"image_picker",
      "id":"image",
      "label":"Background image",
      "default":"https://24vzlu2kzs.ufs.sh/f/4JlBnp1v6U48gEFu1EW4KQobNdljuvhf3x8ZICL0FDiO2aUY"
    },
    {
      "type":"text",
      "id":"heading",
      "label":"Heading",
      "default":"Performance parts engineered for precision"
    },
    {
      "type":"text",
      "id":"subheading",
      "label":"Subheading",
      "default":"From Brampton to your garage"
    },
    {
      "type":"text",
      "id":"button_label",
      "label":"Button label",
      "default":"Shop now"
    },
    {
      "type":"url",
      "id":"button_link",
      "label":"Button link",
      "default":"/collections/all"
    }
  ],
  "presets":[
    {
      "name":"AEH Hero",
      "category":"Image"
    }
  ]
}
{% endschema %}
