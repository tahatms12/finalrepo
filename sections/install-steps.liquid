<div class="install-steps section">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2 class="install-steps__title text-center">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    {%- if section.settings.description != blank -%}
      <p class="install-steps__description text-center">{{ section.settings.description }}</p>
    {%- endif -%}
    
    <div class="install-steps__list">
      {%- for block in section.blocks -%}
        <div class="install-step" {{ block.shopify_attributes }}>
          <div class="install-step__number">
            <span>{{ forloop.index }}</span>
          </div>
          
          <div class="install-step__content">
            {%- if block.settings.image != blank -%}
              <div class="install-step__image">
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  width="600"
                  height="400"
                >
              </div>
            {%- endif -%}
            
            <div class="install-step__text">
              {%- if block.settings.title != blank -%}
                <h3 class="install-step__title">{{ block.settings.title }}</h3>
              {%- endif -%}
              
              {%- if block.settings.description != blank -%}
                <p class="install-step__text-content">{{ block.settings.description }}</p>
              {%- endif -%}
              
              {%- if block.settings.tip != blank -%}
                <div class="install-step__tip">
                  <strong>Pro Tip:</strong> {{ block.settings.tip }}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .install-steps {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-surface);
  }
  
  .install-steps__title {
    margin-bottom: var(--spacing-md);
  }
  
  .install-steps__description {
    color: var(--color-text-light);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .install-steps__list {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .install-step {
    display: flex;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
    position: relative;
  }
  
  .install-step:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 30px;
    top: 60px;
    bottom: -32px;
    width: 2px;
    background: linear-gradient(to bottom, var(--color-accent), transparent);
    z-index: 1;
  }
  
  .install-step__number {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    background: var(--color-accent);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    position: relative;
    z-index: 2;
    box-shadow: var(--shadow-card);
  }
  
  .install-step__content {
    flex: 1;
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-card);
    overflow: hidden;
  }
  
  .install-step__image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }
  
  .install-step__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .install-step__text {
    padding: var(--spacing-lg);
  }
  
  .install-step__title {
    font-size: 1.5rem;
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }
  
  .install-step__text-content {
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }
  
  .install-step__tip {
    background: #f0f9ff;
    border-left: 4px solid var(--color-accent);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
    font-size: 0.9rem;
    color: var(--color-text);
  }
  
  @media screen and (max-width: 750px) {
    .install-step {
      flex-direction: column;
      gap: var(--spacing-md);
      margin-bottom: var(--spacing-xl);
    }
    
    .install-step:not(:last-child)::after {
      left: 50%;
      transform: translateX(-50%);
      top: 60px;
      bottom: -24px;
    }
    
    .install-step__number {
      align-self: center;
    }
    
    .install-step__image {
      height: 150px;
    }
  }
</style>

{% schema %}
