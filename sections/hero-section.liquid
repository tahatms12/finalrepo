<section class="hero-section relative w-full h-screen overflow-hidden flex items-center justify-center text-white">
  {% if section.settings.hero_image != blank %}
    <img src="{{ section.settings.hero_image | image_url: width: 2560 }}"
         alt="{{ section.settings.hero_image.alt }}"
         class="absolute inset-0 w-full h-full object-cover filter brightness-75"
         width="{{ section.settings.hero_image.width }}" height="{{ section.settings.hero_image.height }}">
  {% else %}
    <div class="absolute inset-0 w-full h-full bg-primary"></div>
  {% endif %}

  <div class="relative z-10 text-center p-4">
    <h1 class="text-5xl md:text-7xl font-bold mb-4 animate-fade-in-up">{{ section.settings.hero_title }}</h1>
    <p class="text-lg md:text-xl mb-8 animate-fade-in-up animation-delay-200">{{ section.settings.hero_subtitle }}</p>
    {% if section.settings.button_text != blank %}
      <a href="#" id="scroll-to-ymm" class="inline-block bg-accent-bright-red hover:bg-accent-deep-red text-white font-bold py-3 px-8 rounded-full text-lg transition duration-300 animate-fade-in-up animation-delay-400">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const scrollToYmmButton = document.getElementById('scroll-to-ymm');
    if (scrollToYmmButton) {
      scrollToYmmButton.addEventListener('click', function(e) {
        e.preventDefault();
        const ymmSection = document.getElementById('ymm-search-tool');
        if (ymmSection) {
          ymmSection.scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    }
  });
</script>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Title",
      "default": "Upgrade your driveâ€”smart, seamless, and built for your car"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtitle",
      "default": "Explore our vast selection of auto parts."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click here to explore"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Image"
    }
  ]
}
{% endschema %}
