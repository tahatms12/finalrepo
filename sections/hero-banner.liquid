{%- style -%}
  .hero-banner--{{ section.id }} {
    --hero-desktop-height: {{ section.settings.desktop_height }}vh;
    --hero-mobile-height: {{ section.settings.mobile_height }}vh;
  }
{%- endstyle -%}

<div class="hero-banner hero-banner--{{ section.id }} section">
  <div class="hero-banner__media">
    {%- if section.settings.image != blank -%}
      <img
        srcset="{%- if section.settings.image.width >= 375 -%}{{ section.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
                {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if section.settings.image.width >= 1100 -%}{{ section.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                {%- if section.settings.image.width >= 1780 -%}{{ section.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
                {%- if section.settings.image.width >= 2000 -%}{{ section.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
                {%- if section.settings.image.width >= 3000 -%}{{ section.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                {%- if section.settings.image.width >= 3840 -%}{{ section.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
                {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
        sizes="100vw"
        src="{{ section.settings.image | image_url: width: 1500 }}"
        loading="lazy"
        alt="{{ section.settings.image.alt | escape }}"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    {%- else -%}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
    <div class="hero-banner__overlay"></div>
  </div>
  
  <div class="hero-banner__content container">
    <div class="hero-banner__text">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <p class="hero-banner__text-content">{{ section.settings.text }}</p>
      {%- endif -%}
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="btn btn--primary hero-banner__button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .hero-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: var(--hero-mobile-height);
    overflow: hidden;
  }
  
  @media screen and (min-width: 750px) {
    .hero-banner {
      min-height: var(--hero-desktop-height);
    }
  }
  
  .hero-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
  }
  
  .hero-banner__media img,
  .hero-banner__media svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-crimson) 0%, var(--color-navy) 100%);
    opacity: 0.8;
    z-index: -1;
  }
  
  .hero-banner__content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
    max-width: 800px;
  }
  
  .hero-banner__heading {
    color: white;
    margin-bottom: var(--spacing-md);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .hero-banner__text-content {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-lg);
    opacity: 0.95;
    line-height: 1.6;
  }
  
  @media screen and (min-width: 750px) {
    .hero-banner__text-content {
      font-size: 1.5rem;
    }
  }
  
  .hero-banner__button {
    font-size: 1.1rem;
    padding: 16px 32px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: var(--font-weight-semibold);
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Desktop height",
      "default": 80
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Mobile height",
      "default": 70
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Upgrade your drive â€” smart, seamless, and built for your car",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "Discover premium automotive enhancements designed for performance and style.",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop Now",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "default": "/collections/all",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}