<section class="hero-banner relative overflow-hidden" style="min-height:{{ section.settings.min_height }}vh">
  {% if section.settings.img_bg %}
    <picture>
      <source srcset="{{ section.settings.img_bg | image_url: width: 2880 }}" media="(min-width:1280px)">
      <source srcset="{{ section.settings.img_bg | image_url: width: 1536 }}" media="(min-width:768px)">
      <img src="{{ section.settings.img_bg | image_url: width: 768 }}" alt="{{ section.settings.heading | escape }}" loading="lazy" class="w-full h-full object-cover" width="768" height="432">
    </picture>
  {% endif %}

  <div class="absolute inset-0 flex items-center justify-center">
    <div class="text-center text-white px-6 max-w-3xl">
      {% if section.settings.heading %}<h1 class="font-heading text-h1-mobile md:text-h1-desktop font-heading-weight">{{ section.settings.heading }}</h1>{% endif %}
      {% if section.settings.subheading %}<p class="mt-4 font-body text-body-mobile md:text-body-desktop">{{ section.settings.subheading }}</p>{% endif %}
      {% if section.settings.btn_label and section.settings.btn_link %}
        <a href="{{ section.settings.btn_link }}" class="inline-block mt-8 px-8 py-4 bg-[var(--color-button)] text-[var(--color-button-text)] font-semibold rounded-[var(--buttons-radius)] border-[var(--buttons-border)] border-solid border-[color:var(--color-button)]/[var(--buttons-border-opacity)] shadow-[var(--buttons-shadow-offset)] [box-shadow:var(--buttons-shadow-offset)_rgba(var(--color-shadow),var(--buttons-shadow-opacity))]">{{ section.settings.btn_label }}</a>
      {% endif %}
    </div>
  </div>

  {% schema %}{
    "name":"Hero banner",
    "tag":"section",
    "class":"section section-hero-banner",
    "settings":[
      {"type":"image_picker","id":"img_bg","label":"Background image"},
      {"type":"text","id":"heading","label":"Heading","default":"Headline"},
      {"type":"text","id":"subheading","label":"Subheading"},
      {"type":"text","id":"btn_label","label":"Button label","default":"Shop now"},
      {"type":"url","id":"btn_link","label":"Button link"},
      {"type":"range","id":"min_height","label":"Min height (%)","min":35,"max":100,"step":5,"default":60}
    ],
    "presets":[{"name":"Hero banner"}]
  }{% endschema %}
</section>