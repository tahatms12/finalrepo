<!-- keep existing markup but remove YMM result column -->
<footer class="bg-gray-800 text-white py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-bold mb-4">{{ section.settings.about_title }}</h3>
        <p>{{ section.settings.about_text }}</p>
      </div>
      <div>
        <h3 class="text-lg font-bold mb-4">{{ section.blocks.menu.settings.title }}</h3>
        <ul>
          {% for link in linklists[section.blocks.menu.settings.menu].links %}
            <li><a href="{{ link.url }}" class="hover:underline">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-bold mb-4">Contact</h3>
        {{ section.settings.contact_form | default: '' }}
      </div>
      <div>
        <h3 class="text-lg font-bold mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          {% render 'social-icons' %}
        </div>
      </div>
    </div>
    <div class="mt-8 text-center text-sm text-gray-400">
      <p>&copy; {{ "now" | date: "%Y" }} {{ shop.name }}. All Rights Reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name":"AEH Footer",
  "settings":[],
  "blocks":[
    { "type":"brand","name":"Brand","settings":[{ "type":"text","id":"tagline","label":"Tagline","default":"Performance • Precision • Passion"}]},
    { "type":"menu","name":"Menu","settings":[{"type":"text","id":"title","label":"Heading","default":"Quick Links"},{"type":"link_list","id":"menu","label":"Menu"}]},
    { "type":"contact","name":"Contact","settings":[]},
    { "type":"social","name":"Social","settings":[]}
  ],
  "max_blocks":4,
  "presets":[{ "name":"AEH Footer","blocks":[{"type":"brand"},{"type":"menu"},{"type":"contact"},{"type":"social"}]}]
}
{% endschema %}
