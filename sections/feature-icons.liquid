<div class="feature-icons section">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2 class="feature-icons__title text-center">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    <div class="feature-icons__grid">
      {%- for block in section.blocks -%}
        <div class="feature-icons__item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="feature-icons__icon">
              <img
                src="{{ block.settings.icon | image_url: width: 80 }}"
                alt="{{ block.settings.title | escape }}"
                loading="lazy"
                width="80"
                height="80"
              >
            </div>
          {%- else -%}
            <div class="feature-icons__icon feature-icons__icon--placeholder">
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="m9 12 2 2 4-4"/>
              </svg>
            </div>
          {%- endif -%}
          
          {%- if block.settings.title != blank -%}
            <h3 class="feature-icons__item-title">{{ block.settings.title }}</h3>
          {%- endif -%}
          
          {%- if block.settings.description != blank -%}
            <p class="feature-icons__description">{{ block.settings.description }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .feature-icons {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-surface);
  }
  
  .feature-icons__title {
    margin-bottom: var(--spacing-lg);
  }
  
  .feature-icons__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
  }
  
  @media screen and (min-width: 750px) {
    .feature-icons__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--spacing-xl);
    }
  }
  
  .feature-icons__item {
    text-align: center;
    padding: var(--spacing-md);
  }
  
  .feature-icons__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto var(--spacing-md);
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    border-radius: 50%;
    box-shadow: var(--shadow-card);
  }
  
  .feature-icons__icon img {
    max-width: 60px;
    max-height: 60px;
    object-fit: contain;
  }
  
  .feature-icons__icon--placeholder {
    background-color: var(--color-steel);
    color: white;
  }
  
  .feature-icons__item-title {
    font-size: 1.25rem;
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
  }
  
  .feature-icons__description {
    font-size: 0.9rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0;
  }
</style>

{% schema %}
