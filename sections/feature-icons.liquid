  "name": "Feature Icons",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Why Choose Us",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Feature Title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "default": "Feature description goes here",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Icons",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Perfect Compatibility",
            "description": "Engineered specifically for your vehicle's make and model"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Easy Installation",
            "description": "Simple plug-and-play setup with detailed instructions"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Wireless Integration",
            "description": "Seamless connectivity with your smartphone and devices"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Expert Support",
            "description": "Dedicated customer service and technical assistance"
          }
        }
      ]
    }
  ]
}
{% endschema %}